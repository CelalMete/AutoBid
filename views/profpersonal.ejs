<link rel="stylesheet" href="/styles/profile.css">
<meta name="csrf-token" content="<%= csrfToken %>">
<div class="profileCont2" >
<h2 class="PersonalBas">Profil</h2>
<div class="ppCont">
    <div>
        <img src="<%= user.pp || '/img/default-pp.jpg' %>"  alt="Profil Fotoğrafı" class="ppFoto">
    </div>
        <button class="btn" id="open">Profil Fotoğrafını Değiştir</button>


      <div id="ppModal" class="modal" >
        <div class="modal-content">
          <span class="btn close" id="close">&times;</span>
          <h3 id="ppbas">Yeni Profil Fotoğrafı Yükle</h3>
          <form id="ppForm" enctype="multipart/form-data">
            <input  type="file" id="fileInput">
            <input type="hidden" name="userId" value="<%= user._id %>">
            <button type="button" class="btn" id="uploadBtn">yukle</button>
          </form>
        </div>
    </div>

    </div>
    <div class="perInfo" >
        <h3><%= user.Ad %></h3>
        <h3><%= user.Soyad %></h3>
        <div id="bioAlani">
        <p id="bioMetin"><%= user.bio || "Henüz bio eklenmemiş." %></p>
        <button type="button" class="btn" id="bioDuzenleBtn">Düzenle</button>
        </div>

<div id="bioFormAlani">
  <textarea id="bioTextarea"><%= user.bio %></textarea>
  <button id="bioKaydetBtn">Kaydet</button>
  <button id="bioIptalBtn">İptal</button>
</div>

    </div>
    
      <script src="/scripts/personalsrc.js" defer></script>
      <script src="/scripts/paytr.js" defer></script>
</div>
